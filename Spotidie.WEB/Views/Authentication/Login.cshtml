@using Spotidie.Views.Authentication
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model UserViewModel
@{
    Layout = "";
}
<!DOCTYPE html>
<html>
    <head>
        <link rel="stylesheet" href="/css/auth/auth.css">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
        <script src="https://code.jquery.com/ui/1.13.1/jquery-ui.js"></script>
        <script type="text/javascript" src="/js/site.js"></script>

        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/css/bootstrap-datepicker.min.css"/>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/js/bootstrap-datepicker.min.js"></script>
    </head>
    <body>

        <div class="container-center">
            <h2>Spotidie</h2>   
            <h1 style="text-align: center">Login</h1>

            <form asp-action="Login" asp-controller="Authentication" asp-antiforgery="true" method="post">
                <p>
                    Your email adress
                    <input type="text" name="email" asp-for="UserEmail" placeholder="Input your email adress" class="container-center-input">
                </p>

                <p>
                    Enter a password
                    <input type="password" name="password" asp-for="UserPassword" placeholder="Pick a password" class="container-center-input">
                </p>

                <div class="registerbtn">
                    <button type="submit">
                        Login
                    </button>
                </div>
            </form>
        
            <span style="margin: 10px;">
                Not registered yet?
                <a href="@Url.Action("Register", "Authentication")">Register</a>
            </span>
        </div>
    </body>
</html>